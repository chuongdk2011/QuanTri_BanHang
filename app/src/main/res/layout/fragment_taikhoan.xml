<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:background="#F6E7B4">
        <androidx.cardview.widget.CardView
            android:id="@+id/car_taikhoan"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:cardCornerRadius="50dp"
            android:layout_marginLeft="15dp"
            android:layout_centerVertical="true">
            <ImageView
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:src="@drawable/ic_taikhoan"/>
        </androidx.cardview.widget.CardView>
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/car_taikhoan"
            android:layout_centerVertical="true"
            android:layout_marginLeft="10dp">
            <TextView
                android:id="@+id/tv_fullname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hello word !"
                android:textSize="15dp"/>
        </RelativeLayout>

        <Button
            android:id="@+id/btn_dangxuat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:text="Đăng Xuất"
            android:layout_marginRight="10dp"/>
    </RelativeLayout>
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp">
        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TableRow
                android:padding="5dp">
                <RelativeLayout
                    android:id="@+id/rl_xacnhandon"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_weight="1">
                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardviewbill1"
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:layout_alignRight="@+id/img3"
                        android:layout_marginTop="3dp"
                        app:cardCornerRadius="40dp"
                        app:cardBackgroundColor="#CC2121">
                        <TextView
                            android:id="@+id/tvsoluongbill1"
                            android:layout_width="wrap_content"
                            android:layout_height="11dp"
                            android:textSize="11dp"
                            android:text="1"
                            android:layout_gravity="center"
                            android:layout_marginBottom="2dp"
                            android:textColor="#ccc"/>
                    </androidx.cardview.widget.CardView>
                    <ImageView
                        android:id="@+id/img3"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/xacnhan"
                        android:layout_centerHorizontal="true"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Xác nhận đơn"
                        android:textStyle="bold"
                        android:textSize="10dp"
                        android:layout_below="@+id/img3"
                        android:layout_centerHorizontal="true"/>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/rl_layhang"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_weight="1">
                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardviewbill2"
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:layout_alignRight="@+id/img4"
                        android:layout_marginTop="3dp"
                        app:cardCornerRadius="40dp"
                        app:cardBackgroundColor="#CC2121">
                        <TextView
                            android:id="@+id/tvsoluongbill2"
                            android:layout_width="wrap_content"
                            android:layout_height="11dp"
                            android:textSize="11dp"
                            android:text="1"
                            android:layout_gravity="center"
                            android:layout_marginBottom="2dp"
                            android:textColor="#ccc"/>
                    </androidx.cardview.widget.CardView>
                    <ImageView
                        android:id="@+id/img4"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/layhang"
                        android:layout_centerHorizontal="true"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Đóng gói"
                        android:textStyle="bold"
                        android:textSize="10dp"
                        android:layout_below="@+id/img4"
                        android:layout_centerHorizontal="true"/>
                </RelativeLayout>
                <RelativeLayout
                    android:id="@+id/rl_danggiao"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_weight="1">
                    <androidx.cardview.widget.CardView
                        android:id="@+id/cardviewbill3"
                        android:layout_width="12dp"
                        android:layout_height="12dp"
                        android:layout_alignRight="@+id/img5"
                        android:layout_marginTop="3dp"
                        app:cardCornerRadius="40dp"
                        app:cardBackgroundColor="#CC2121">
                        <TextView
                            android:id="@+id/tvsoluongbill3"
                            android:layout_width="wrap_content"
                            android:layout_height="11dp"
                            android:textSize="11dp"
                            android:text="1"
                            android:layout_gravity="center"
                            android:layout_marginBottom="2dp"
                            android:textColor="#ccc"/>
                    </androidx.cardview.widget.CardView>
                    <ImageView
                        android:id="@+id/img5"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/vanchuyen"
                        android:layout_centerHorizontal="true"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Vận chuyển"
                        android:textStyle="bold"
                        android:textSize="10dp"
                        android:layout_below="@+id/img5"
                        android:layout_centerHorizontal="true"/>
                </RelativeLayout>
            </TableRow>
        </TableLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/card_donhoanthanh"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp"
        app:cardCornerRadius="3dp">
        <RelativeLayout
            android:id="@+id/relative4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <ImageView
                android:id="@+id/icon_hoanthanh"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="5dp"
                android:src="@drawable/hoanthanh" />
            <TextView
                android:id="@+id/tv_hoanthanh"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@+id/icon_hoanthanh"
                android:layout_centerVertical="true"
                android:layout_marginLeft="40dp"
                android:text="Đơn hàng hoàn thành"
                android:textSize="20dp"
                android:textStyle="bold"/>

            <ImageView
                android:id="@+id/img_hoanthanh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="5dp"
                android:src="@drawable/ic_thoatphai" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/card_donhuy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/ichuyhang"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/outbill"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="5dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Đơn hàng bị hủy"
                android:layout_alignLeft="@+id/ichuyhang"
                android:layout_centerVertical="true"
                android:layout_marginLeft="40dp"
                android:textSize="20dp"
                android:textStyle="bold"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="5dp"
                android:src="@drawable/ic_thoatphai" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
    <androidx.cardview.widget.CardView
        android:id="@+id/card_dscagoryte"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="10dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/icloai"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:src="@drawable/ic_type"
                android:layout_gravity="center"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="5dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Danh sách loại"
                android:layout_alignLeft="@+id/icloai"
                android:layout_centerVertical="true"
                android:layout_marginLeft="40dp"
                android:textSize="20dp"
                android:textStyle="bold"/>
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="5dp"
                android:src="@drawable/ic_thoatphai" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>