<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Màu nền trong suốt -->
    <item android:drawable="@android:color/transparent" />
    <!-- Màu viền Spinner -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" /> <!-- Màu viền -->
            <stroke android:color="@android:color/white" android:width="2dp" /> <!-- Màu nền và độ rộng viền -->
            <corners
                android:bottomLeftRadius="4dp"
                android:bottomRightRadius="4dp"
                android:topLeftRadius="4dp"
                android:topRightRadius="4dp" />
        </shape>
    </item>
    <item android:left="10dp"><bitmap android:gravity="center_vertical|right" android:src="@drawable/arrow_spin" />
    </item>

</layer-list>