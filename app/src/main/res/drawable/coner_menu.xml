<?xml version="1.0" encoding="utf-8"?>
<shape
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Set màu nền-->
    <solid
        android:color="#92C3CA">
    </solid>
    <gradient
        android:startColor="#9795f0"
        android:endColor="#c2e9fb"
        android:angle="-270" />
    <!-- đặt thuộc tính màu và độ rộng của đường viền -->
    <stroke
        android:width="2dp"
        android:color="#6E686A" >
    </stroke>

    <!-- các thuộc tính căn chỉnh-->
    <padding
        android:left="5dp"
        android:top="5dp"
        android:right="5dp"
        android:bottom="5dp" >
    </padding>

    <!-- và đây là bán kính đường tròn ở 4 góc -->
    <corners
        android:radius="35dp" >
    </corners>

</shape>